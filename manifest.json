{
  "manifest_version": 3,
  "name": "Focus Guardian",
  "version": "1.0.0",
  "description": "Stay focused on your chosen topic while browsing with intelligent break management",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Focus Guardian"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}